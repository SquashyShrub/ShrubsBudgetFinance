@page "/AccountNames"

@layout NavigationLayout

<head>
    <title>Account Names</title>
    <style>
        body {
            font-family: Consolas;
            margin: 10px;
        }

        table {
            width: 50%;
            border-collapse: collapse;
            margin-bottom: 10px;
        }

        td {
            border: 1px solid grey;
            padding-left: 10px;
            padding-right: 10px;
        }

        th {
            background-color: lightgrey;
            font-size: 24px;
            padding: 10px;
            border: 1px solid grey;
            text-align: center;
        }

        input {
            margin-top: 4px;
            margin-bottom: 4px;
            width: 100%;
            padding: 2px;
            box-sizing: border-box;
        }
    </style>
</head>

<body>
    <h1>Account Names</h1>
    <p>Enter your different account names below</p>
    
    <table id="accountNameTable">
        <thead>
            <tr>
                <th>Account Type</th>
                <th>Nickname</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Main Checking Account</td>
                <td><input type="text" id="mainCheckingText" placeholder="i.e. Monthly Budget" /></td>
            </tr>
            <tr>
                <td>Main Billing Account</td>
                <td><input type="text" id="mainBillingText" placeholder="i.e. Spending Needs" /></td>
            </tr>
            <tr>
                <td>Savings Account #1</td>
                <td><input type="text" id="savingsOneText" placeholder="i.e Savings" /></td>
            </tr>
            <tr>
                <td>Savings Account #2</td>
                <td><input type="text" id="savingsTwoText" placeholder="i.e Annual Budget" /></td>
            </tr>
            <tr>
                <td>Savings Account #3</td>
                <td><input type="text" id="savingsThreeText" placeholder="i.e Chase Bank Total" /></td>
            </tr>
            <tr>
                <td>Savings Account #4</td>
                <td><input type="text" id="savingsFourText" placeholder="i.e. CD" /></td>
            </tr>
        </tbody>
    </table>
    <div class="btn btn-primary">Save Account Names</div>

</body>

